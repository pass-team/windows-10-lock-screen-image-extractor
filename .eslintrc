{
  "env": {
    "node": true,
    "browser": false,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      1,
      {
        "code": 120,
        "tabWidth": 2
      }
    ],
    "no-underscore-dangle": 0,
    "quotes": [2, "single", { "avoidEscape": true }],
    "func-names": 0,
    "import/extensions": [1, { "js": "always"}],
    "import/no-cycle": 0,
    "import/no-extraneous-dependencies": 0
  }
}
